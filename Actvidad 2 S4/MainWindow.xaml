<Window x:Class="SequentialFileOperations.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sequential File Operations" Height="350" Width="525">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBox x:Name="txtInput" Grid.Row="0" Width="300" Margin="102,16,103,17" />
        <Button x:Name="btnWrite" Grid.Row="1" Content="Write to File" Width="120" Height="30" Margin="10,10,375,10" Click="btnWrite_Click" />
        <Button x:Name="btnRead" Grid.Row="1" Content="Read from File" Width="120" Height="30" Margin="0,10,0,10" HorizontalAlignment="Center" Click="btnRead_Click" />
        <Button x:Name="btnDelete" Grid.Row="1" Content="Delete File" Width="120" Height="30" Margin="375,10,0,10" HorizontalAlignment="Left" Click="btnDelete_Click" />

        <TextBlock x:Name="txtOutput" Grid.Row="3" Text="Output will be displayed here." TextWrapping="Wrap" Margin="10" />
    </Grid>
</Window>